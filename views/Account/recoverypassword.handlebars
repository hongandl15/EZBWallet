
<div class="p-4 mt-5 w-75">
  <h1 class=""> <img src="/assets/user.png"></img>PASSWORD RECOVERY</h1>
  <h5 class="mb-3" style="color:#58E1FF">Khôi phục mật khẩu</h5>
      <form method="post" action="/successful">
          <div class="modal-body">
            <div class="form-group">
                <label for="passwordconfirm">Mật khẩu mới</label>
                <input class="form-control" type="password" placeholder="Nhập Password mới" id="newpassword" name="newpassword">
            </div>
            <div class="form-group">
                <label for="passwordconfirm">Nhập lại mật khẩu mới</label>
                <input class="form-control" type="password" placeholder="Nhập lại Password" id="passwordconfirm" name="passwordconfirm">
            </div>
            {{#if error}}
            <div class="alert alert-danger">
              {{error}}
            </div>
            {{/if}}
            <div class="form-group">
              <button class="btn btn-success mr-2">Khôi phục</button>
        </div>
      </form>
  </div>
</div>


